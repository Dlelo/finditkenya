        $(".imagegallery").on("change", function() { 
              //alert(packagename);
              preview_images();
              if(packagename == "bronze"){
                if($(".imagegallery")[0].files.length > 5) {
                  $(".imagegallery").val('');
                  $('#gallerypreview').html('');
