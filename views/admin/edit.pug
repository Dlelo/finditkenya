      $(document).ready(function() {
        $('.btnclose').on("click", function(e){
          //alert();
          $(this).parent().parent().find(".hoursopencloseoption").val('closed');
          //$(this).parent().parent().find(".hoursclosed").val('closed');
          e.stopPropagation();
          e.preventDefault();
        });

