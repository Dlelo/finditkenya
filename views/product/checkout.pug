extends ../layout-min

block content
  #home.parallax-content-list.baner-content-listing-biz
    .container.container-margin-top
      .row
        .col-md-7
          h5.agile-title.h-order-category.text-center
                          | Best Sellers
          form(method='post', action='/product/pay')
            .row
            .col-md-12.form-control
              .form-group
                | Use Existing Shipping Address
                .col-sm-6
                  input.shippingaddress(name='shippingaddress',type='radio',value=true, style ="margin-top:12px; width: 20px; height: 20px;", required)
              .form-group.row
                if(loggedin)
                  span.col-md-12.phone
                    | Phone: 
                    =user.shippingaddress.phone
                  span.col-md-12.email
                    | Email: 
                    =user.shippingaddress.email
                  span.col-md-12.building
                    | Building Address: 
                    =user.shippingaddress.building
                  span.col-md-12.area
                    | Area: 
                    =user.shippingaddress.area
            .col-md-12.form-control
              .form-group
                | Use New Shipping Address
                .col-sm-6
                  input.shippingaddress(name='shippingaddress',type='radio',value=false, style ="margin-top:12px; width: 20px; height: 20px;", required)
              .form-group
                input.form-control-form(name='phone', type='text', placeholder='phone *')
                input.form-control-form(name='email', type='text', placeholder='email *')
                textarea.form-control-form(name='address', type='text', placeholder='Street Name / Building / Apartment No. / Floor *')
                input.form-control-form(name='area', type='text', placeholder='Area within Nairobi * (eg Parklands or Pipeline)')
              .form-group
                span.btn.btn-grey.btn-block.btn-lg.noLnk(style=' border: 1px solid;margin-bottom:10px;')
                  small(style='text-transform: none;') Total KShs. #{total} .
              .form-group
                button.btn.btn-primary.form-control(type='submit')
                  | Save and Proceed 
        .col-md-5
          each p in cart
            .row(style="margin: 4px;")
              .col-md-3.nopadding
                img(src='/uploads/product/thumbs/'+p.photo,width='95%')
              .col-md-2.nopadding
                strong.findit-blue
                  =p.name 
              .col-md-2.nopadding
                  strong.findit-red
                    |  KES 
                    =p.price   
              .col-md-4.nopadding(style="border:1px solid #eee; border-radius:3px; text-align:center;")
                h6 
                  | Subtotal ( No. of Items #{p.count}): 
                  .findit-red 
                    | KES: #{p.count * p.price}
                  if(p.vat)
                    | KES #{p.price * 0.16}
      .container
        form(method='post', action='https://payments.ipayafrica.com/v3/ke')
          input(name='hsh', type='hidden', value=hash)
          input(name=i, type='hidden', value=total)
          h3.text-center
            strong(id='')
            //each input,i in inputs
              //input(name=i, type='hidden', value=input)
              $("#radio_1").is(":checked")
  script(type='text/javascript').
    $(function(){
      $(document).on('change', '.shippingaddress', function(event) {
        if(event.target.value == 'on'){
          //alert(event.target.value);
          $("input").prop('required',true);
        }else{
          $("input").prop('required',false);
        }
      });
      $("#shippingaddress").is(":checked");
    });
