extends admin-layout

block content
  .row
    .col-md-12.col-lg-12.col-sm-12.dash-padding
      .white-box
        h3.box-title.text-center Reviews
        .table-responsive
          table.table
            thead
              tr
                th #
                th BUSINESS NAME
                th MESSAGE
                th REVIEW BY
                th ACTIONS
            tbody
              each review, i in reviews
                tr
                  td
                    =i
                  td 
                    =review.bizid.name
                  td.txt-oflo 
                    =review.message
                  td
                    span.text-success
                      =review.user_id
                  td
                    span.text-danger
                      a(href="/admin/review/delete/"+review.id, title="Delete Review", onclick="return confirm('Are you sure You want to Delete this Review?')")
                        i.fa.fa-trash.fa-fw(aria-hidden='true')
