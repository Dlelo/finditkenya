                                                i.star-half
                                                i.star-filled
                                              .star
                                                i.star-empty
                                                i.star-half
                                                i.star-filled
                                              .star
                                                i.star-empty
                                                i.star-half
                                                i.star-filled
                                          small
                                            | #{biz.reviews.length} Review
                                      else if( biz.reviews.length > 1)
                                        span.glyphicon.glyphicon-cog.glyph.border
                                          div(class="rating medium star-icon value-4 label-hidden")
                                            .star-container
                                              .star
                                                i.star-empty
                                                i.star-half
                                                i.star-filled
                                              .star
                                                i.star-empty
                                                i.star-half
                                                i.star-filled
                                              .star
                                                i.star-empty
                                                i.star-half
                                                i.star-filled
                                              .star
                                                i.star-empty
                                                i.star-half
                                                i.star-filled
                                              .star
                                                i.star-empty
                                                i.star-half
                                                i.star-filled
                                        small
                                          |  #{biz.reviews.length} Reviews
                                      else
                                        span.glyphicon.glyphicon-cog.glyph
                                          |  Be the first to review    
                                
                          
          
      //script to put navitems open by default
      script(type='text/javascript').
        $(document).ready(function(){
            $(".dropdown-toggle").dropdown("toggle");
          });
