extends ../admin/admin-layout

block content
  // /.row
  // ==============================================================
  // Different data widgets
  // ==============================================================
  // .row
  .row
    .col-md-12.col-lg-12.col-sm-12
      .white-box
        //.col-md-3.col-sm-4.col-xs-6.pull-right
          select.form-control.pull-right.row.b-none
            option March 2017
            option April 2017
            option May 2017
            option June 2017
            option July 2017
        //h3.box-title Agents
        .table-responsive
          table.table
            thead
              tr
                th #
                th NAME
                th ACTIONS
            tbody
              each area,i in areas
                tr
                  td #{i+1}
                  td.txt-oflo
                    =area.name
                  td   
                    span.text-danger
                      a(href="/admin/areas/delete/"+area.id, title="Delete Area")
                        i.fa.fa-trash.fa-fw(aria-hidden='true')
              
