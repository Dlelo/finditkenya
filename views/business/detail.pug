extends ../layout-new

block content
  #home.baner-content-listing-biz
    .container-fluid.container-margin-top
      .row.flowerwhite
        .col-md-2.col-xs-2
          if(biz.photo)
            img.img-responsive.logo-res(src="/uploads/thumbs/cover"+ biz.photo, alt=biz.name +' on FindIt Kenya', width='100%') 
          else
            img.cat-image.cat-items-bottom(src="/img/noimageavailable.jpg", alt=biz.name+ ' on FindIt Kenya')          
        .col-md-8.col-xs-8
          p.text-center
            h3.text-center
              =biz.name
          p.text-center
            span(style="font-size: 1.05rem;")
              if (biz.openstatus.isOpen)
                if (biz.openstatus.isOpen == true)
                  span.badge.badge-success
                    span.fas.fa-check-circle  
                    |  Now Open
              else
                span.badge.badge-danger
                  span.fas.fa-times-circle  
                  |  Now Closed
              - var list = [1,2,3,4,5]
              - list.sort((a,b)=>{return Math.random()-0.5})
          p.text-center
            each feature in biz.features
              a(href="/subcategory/subcat/"+feature)
                strong
                  |       #{feature} |
        if biz.branch==true 
          .col-md-2.col-xs-2.text-center
              .row.text-center
                .col-md-12.text-center
                  h6.text-center
                    strong Headquarters
              br
              .row.text-center
                .col-md-12.text-center              
                  a.bizlink(href="/biz/"+hq.slug)
                    if hq.photo 
                      img.coup-img.img-fluid(src="/uploads/thumbs/cover"+ hq.photo, alt=hq.name +' on FindIt Kenya')
                    else
                      img.coup-img.img-fluid(src="/img/noimageavailable.jpg", alt=hq.name+ ' on FindIt Kenya')
                    //div
                      h6.findit-red
                        =hq.name 
                          
        else
          | 
      .row.flowerwhite
        .col-md-3
          .row.is-island
            .col-md-12
              if(branches)
                div
              else
                if biz.building
                  p.text-left.findit-blue
                    strong
                      span.fas.fa-building
                      |  #{biz.building}
                if biz.street
                  p.text-left.findit-blue
                    strong
                      span.fas.fa-road
                      |  #{biz.street}
            .col-md-12
              p.text-left.findit-blue
                strong
                  span.fas.fa-th-list
                  |  #{biz.subcategory}
              hr.nomargin
            if(biz.website)
              .col-md-12
                p.text-left.findit-blue
                  strong.findit-blue
                    span.fas.fa-globe
                    a.findit(href="http://"+biz.website,target="_blank")
                      |  Website
              hr.nomargin
            .col-md-12
              p.text-left.findit-red
                each phone in phones
                  span#biz-id(style="display:none")
                    =biz.id
                  span.fas.fa-phone
                  //remove style="display:none" on phoneno
                  a.findit.phoneno(href="tel:"+phone)
                    |  #{phone}
                  //a.findit.phonenofake(href="#")
                    |  Get Contacts
                  br
              hr.nomargin
            .col-md-12.text-left
              p.text-left.findit-blue
                each email in emails
                  strong.findit-blue
                    span.fas.fa-envelope
                    a.findit(href="mailto:"+email)
                      |  Mail
                  br
              hr.nomargin
            if(biz.facebook)
              .col-md-12.text-left
                p.findit-blue
                  strong
                    span.fab.fa-facebook-f
                    a.findit(href="http://"+biz.facebook,target="_blank") 
                      | Facebook
            if(biz.twitter)
              .col-md-12.text-left
                p.findit-blue 
                  strong
                    span.fab.fa-twitter
                    a.findit(href="http://"+biz.twitter,target="_blank")
                      |  Twitter
            if(biz.instagram)
              .col-md-12.text-left
                p.findit-blue 
                  strong
                    span.fab.fa-instagram
                    a.findit(href="http://"+biz.instagram,target="_blank")
                      |  Instagram
            if(biz.linkedin)
              .col-md-12.text-left
                p.findit-blue 
                  strong
                    span.fab.fa-linkedin 
                    a.findit(href="http://"+biz.linkedin,target="_blank")
                      |  LinkedIn
            if(biz.youtube)
              .col-md-12.text-left
                p.findit-red
                  strong
                    span.fab.fa-youtube
                    a.findit(href="http://"+biz.youtube,target="_blank")
                      |  Youtube
            
              hr
            if (biz.catalog.length)
              .col-md-12.text-left
                each catalogue, i in biz.catalog
                  if (catalogue)
                    strong
                      p
                        span.fas.fa-bars
                        
                        a.findit(href="/business/catalog/"+catalogue.filename, target="_blank")
                          |  View Menu #{i+1}
                  else
                      | 
              hr   
            if(biz.profile)
              .col-md-12.text-left 
                strong
                  p
                    span.fas.fa-bars
                    a.findit(href="/business/profile/"+biz.profile.filename, target="_blank")
                      |  View Company Profile  
                  
            
            //if(branches
            if (biz.openstatus)
              .row
                .col-md-12#hours
                  div#sunday  
                    each hour in biz.hours.sunday
                      if(hour.opens === hour.closes)
                        |  Closed
                      else
                        | Open Now.  #{hour.opens} - #{hour.closes}
                  div#monday
                    each hour in biz.hours.monday
                      if(hour.opens === hour.closes)
                        |  Closed      
                      else
                        | Open Now. #{hour.opens} - #{hour.closes}
                  div#tuesday
                    each hour in biz.hours.tuesday
                      if(hour.opens === hour.closes)
                        |  Closed
                      else
                        | Open Now #{hour.opens} - #{hour.closes}
                  div#wednesday  
                    each hour in biz.hours.wednesday
                      if(hour.opens === hour.closes)
                        |   Closed
                      else
                        | Open Now.  #{hour.opens} - #{hour.closes}
                  div#thursday
                    each hour in biz.hours.thursday
                      if(hour.opens === hour.closes)
                        | Closed
                      else
                        | Open Now.  #{hour.opens} - #{hour.closes}
                  div#friday  
                    each hour in biz.hours.friday
                      if(hour.opens === hour.closes)
                        |  Closed
                      else
                        | Open Now.  #{hour.opens} - #{hour.closes}
                  div#saturday
                    each hour in biz.hours.saturday
                      if(hour.opens === hour.closes)
                        |   Closed
                      else
                        | Open Now.  #{hour.opens} - #{hour.closes}
            if (biz.openstatus)  
              .row
                a(href="#openingandclosing" onClick="$('#openingandclosing').show();")
                  .col-md-12.padding20
                    strong
                      |  See Opening & Closing Hours
              
                .col-md-12#openingandclosing(style="display:none;")
                  each hour in biz.hours.monday
                    if(hour.opens === hour.closes)
                      p  Monday: Closed
                        
                    else
                      p Monday: #{hour.opens} - #{hour.closes}
                  each hour in biz.hours.tuesday
                    if(hour.opens === hour.closes)
                      p  Tuesday: Closed
                    else
                      p Tuesday: #{hour.opens} - #{hour.closes}
                  each hour in biz.hours.wednesday
                    if(hour.opens === hour.closes)
                      p  Wednesday: Closed
                    else
                      p Wednesday: #{hour.opens} - #{hour.closes}
                  each hour in biz.hours.thursday
                    if(hour.opens === hour.closes)
                      p Thursday: Closed
                    else
                      p Thursday: #{hour.opens} - #{hour.closes}
                  each hour in biz.hours.friday
                    if(hour.opens === hour.closes)
                      p  Friday: Closed
                    else
                      p Friday: #{hour.opens} - #{hour.closes}
                  each hour in biz.hours.saturday
                    if(hour.opens === hour.closes)
                      p   Saturday: Closed
                    else
                      p Saturday: #{hour.opens} - #{hour.closes}
                  each hour in biz.hours.sunday
                    if(hour.opens === hour.closes)
                      p  Sunday: Closed
                    else
                      p Sunday: #{hour.opens} - #{hour.closes}
          .row
            .col-md-12.text-center.findit-red
                if biz.paid
                  span.badge.badge-success
                    span.fa.fa-check-circle.strong(style="color:#2862ec;")
                    strong
                      |  Claimed
                else
                  h4 Claim This Business
                  form(method='get', action='/claim-form/'+biz.id)
                    .form-group
                      input.form-control(name='phone', type='text', value='', placeholder='phone')
                    .form-group
                      input.form-control(name='email', type='text', value='', placeholder='email')
                    .form-group
                      button.btn.btn-danger.form-control(type='submit')                 
                        | Claim Business
          if(biz.deliverylink)
            .row
              .col-md-12.col-md-offset-3(style="background-color:#00aabb;padding:5px;border-radius:25px;")
                p 
                  span.fas.fa-motorcycle(style="color:#fdfdfd;")
                  a.findit(href="http://"+biz.deliverylink,target="_blank",style="color:#fdfdfd;font-size:18px")
                    strong
                      |  Place Your Order Now
              
          if(biz.bookinglink)
            .row
              .col-md-12.col-md-offset-3(style="background-color:#00aabb;padding:5px;border-radius:25px;")
                p 
                  span.fas.fa-plane(style="color:#fdfdfd;")
                  a.findit(href="http://"+biz.bookinglink,target="_blank",style="color:#fdfdfd;font-size:18px;")
                    strong
                      |  Book or Reserve Now  
        .col-md-6 
          .row  
            .col-md-12
              if biz.gallery  
                if biz.gallery.length > 0
                  #lightgallery.thumbnails.scrollmenu
                    each image in biz.gallery
                      a.nopadding(href='/uploads/'+image.filename, width="", alt='#{biz.slug}')
                        .thumbnail.bizdetail-photo
                          img.img-thumbnail.img-responsive(src='/uploads/thumbs/gallery-'+image.filename,  alt=biz.name +' on FindIt Kenya')
                    .pull-left
                      small
                        strong
                          | Scroll this Gallery Left or Right
                else
                  |
              
              if biz.description
                .row
                  .col-md-12
                    #web-view
                      .panel
                        .findit-red.padding10top
                          strong More Information
                        .panel-body
                          p.padding-p  !{biz.description}
                    .hideonclick
                      #mobile-view
                        .panel
                          .findit-red.padding10top
                            strong More Information
                          .panel-body
                            p.padding-p 
                              if biz.description.length > 250
                                p.padding.text-left.description-cat  !{biz.description.substr(0, 250)+ '..... <strong id="showmore" style="background-color:#c00000; color:#fff; padding:1px">Read More</strong>'}
                              else
                                p.padding-p  !{biz.description}
                                
                    #show-more
                      .panel
                        .findit-red.padding10top
                          strong More Information
                        .panel-body
                          p.padding-p  !{biz.description} 
                            | ..... 
                            strong(id="showless" style="background-color:#c00000; color:#fff; padding:1px") Read Less 
              else if (biz.branch && hq.replicate)
                .row
                  .col-md-12
                    #web-view
                      .panel
                        .findit-red.padding10top
                          strong More Information
                        .panel-body
                          p.padding-p  !{hq.description}
                    .hideonclick
                      #mobile-view
                        .panel
                          .findit-red.padding10top
                            strong More Information
                          .panel-body
                            p.padding-p 
                              if hq.description.length > 250
                                p.padding.text-left.description-cat  !{hq.description.substr(0, 250)+ '..... <strong id="showmore" style="background-color:#c00000; color:#fff; padding:1px">Read More</strong>'}
                    #show-more
                      .panel
                        .findit-red.padding10top
                          strong More Information
                        .panel-body
                          p.padding-p  !{hq.description} 
                            | ..... 
                            strong(id="showless" style="background-color:#c00000; color:#fff; padding:1px") Read Less 
                                
              if biz.ammenities        
                .row
                  .col-md-12
                    .panel-body              
                      if biz.extras.length 
                        strong.findit-red
                          h4 Ammenities  
                        each extra in biz.extras 
                            span.label.label-dark
                              span.extra-space
                                =extra + ','
                      else
                          | 
              .col-md-12.col-xs-12(style="margin-top:1rem; padding-right: 0px; padding-left: 0px;")
                if(branches)
                  div#mappy(style="height:20rem !important; !important; width:100% !important;") 
                else
                  iframe(width='100%', height='250', frameborder='0', style='border:0', src='https://www.google.com/maps/embed/v1/view?zoom='+biz.map.zoom+'&center='+biz.map.coordinates[1]+','+biz.map.coordinates[0]+'&key=AIzaSyA0P3blnbZTWe7vHDrbX3Bsd7RA2Y5ViTk', allowfullscreen='',)
        .col-md-3
          if(coupons.length > 0)        
            .row
              .col-md-12.is-island  
                .row
                  .col-md-12
                    div
                      h4
                        strong
                          | Coupons in This Business
                br
                .row
                  .col-md-12
                    each coupon, i in coupons 
                      if i<2
                        a(href="/coupons")    
                          h6
                            =coupon.name
                          if coupon.photo
                            img.coup-img.img-fluid(src="/uploads/thumbs/coupons/"+ coupon.photo, alt=coupon.bizid.name +' on FindIt Kenya')
                          else
                            img.coup-img.img-fluid(src="/img/noimageavailable.jpg", alt=coupon.bizid.name + ' on FindIt Kenya')
                          .div
                              span
                                =coupon.tagline
                              p
                                =coupon.description
                        br
                //.row
                  .col-md-12
                    a(href='#') See all
                //the coup modal
                if(coupons.length > 0)
                  .row
                    .col-md-12
                      button.btn.btn-primary(type='button' data-toggle='modal' data-target='#coupModal')  See more
                      // The Modal
                      #coupModal.modal
                        .modal-dialog
                          .modal-content(style="width: 100% !important;")
                            // Modal Header
                            .modal-header
                              h4.modal-title Coupons
                              button.close(type='button' data-dismiss='modal') &times;
                            // Modal body
                            .modal-body
                              .row
                                .col-md-12      
                                  each coupon, i in coupons
                                    if i>1
                                      a(href="/coupons")    
                                        h6
                                          =coupon.name         
                                      
                                        if coupon.photo
                                          img.coup-img.img-fluid(src="/uploads/thumbs/coupons/"+ coupon.photo, alt=coupon.bizid.name +' on FindIt Kenya')
                                        else
                                          img.coup-img.img-fluid(src="/img/noimageavailable.jpg", alt=coupon.bizid.name + ' on FindIt Kenya')
                                        .div
                                          span
                                            =coupon.tagline
                                          p
                                            =coupon.description   
                                      br
                            // Modal footer
                            .modal-footer
                              button.btn.btn-danger(type='button' data-dismiss='modal') Close

                  
          if(branches)
            .row
              .col-md-12.is-island  
                .row
                  .col-md-12
                    div
                      h4
                        strong
                          | Branches
                br
                .row
                  .col-md-12       
                    each branch, i in branches 
                      if i<2       
                        a.bizlink(href="/biz/"+branch.slug) 
                          p
                            if branch.photo 
                              img.coup-img.img-fluid(src="/uploads/thumbs/cover"+ branch.photo, alt=branch.name +' on FindIt Kenya')
                            else
                              img.coup-img.img-fluid(src="/img/noimageavailable.jpg", alt=branch.name+ ' on FindIt Kenya')
                            div
                              h6.findit-red
                                =branch.name
                              if(!isNaN(branch.distance))  
                                span.text-left 
                                  small
                                    =(branch.distance/1000).toFixed(1)
                                    span     km away
                        br
                //.row
                  .col-md-12
                    a(href='#') See all
                //modal
                if(branches.length > 2)
                  .row
                    .col-md-12
                      button.btn.btn-primary(type='button' data-toggle='modal' data-target='#branchModal')  See more
                      // The Modal
                      #branchModal.modal
                        .modal-dialog
                          .modal-content(style="width: 100% !important;")
                            // Modal Header
                            .modal-header
                              h4.modal-title Branches
                              button.close(type='button' data-dismiss='modal') &times;
                            // Modal body
                            .modal-body
                              .row
                                .col-md-12      
                                  each branch, i in branches
                                    if i>1         
                                      a.bizlink(href="/biz/"+branch.slug) 
                                        p
                                          if branch.photo
                                            img.coup-img.img-fluid(src="/uploads/thumbs/cover"+ branch.photo, alt=branch.name +' on FindIt Kenya')
                                          else
                                            img.coup-img.img-fluid(src="/img/noimageavailable.jpg", alt=branch.name+ ' on FindIt Kenya')
                                          div
                                            h6.findit-red
                                              =branch.name
                                            if(!isNaN(branch.distance))  
                                              span.text-left 
                                                small
                                                  =(branch.distance/1000).toFixed(1)
                                                  span     km away   
                                      br
                            // Modal footer
                            .modal-footer
                              button.btn.btn-danger(type='button' data-dismiss='modal') Close

          if(similarbiz.length > 0)
            .row
              .col-md-12.is-island  
                .row
                  .col-md-12
                    div
                      h4
                        strong Similar Businesses
                br
                .row
                  .col-md-12      
                    each bizna, i in similarbiz
                      if i<2          
                        a.bizlink(href="/biz/"+bizna.slug) 
                          p
                            if bizna.photo
                              img.coup-img.img-fluid(src="/uploads/thumbs/cover"+ bizna.photo, alt=bizna.name +' on FindIt Kenya')
                            else
                              img.coup-img.img-fluid(src="/img/noimageavailable.jpg", alt=bizna.name+ ' on FindIt Kenya')
                            div
                              h6.findit-red
                                =bizna.name
                              span
                                .row
                                  each feature , i in bizna.features.sort()
                                    if(i < 2)
                                      .col-xs-6
                                        | #{feature}    |   
                                
                              if(!isNaN(bizna.distance))  
                                span.text-left
                                  small  
                                    =(bizna.distance/1000).toFixed(1)
                                    span     km away   
                        br
                if(similarbiz.length > 2)
                  .row
                    .col-md-12
                      button.btn.btn-primary(type='button' data-toggle='modal' data-target='#myModal')  See more
                      // The Modal
                      #myModal.modal
                        .modal-dialog
                          .modal-content(style="width: 100% !important;")
                            // Modal Header
                            .modal-header
                              h4.modal-title Similar Businesses
                              button.close(type='button' data-dismiss='modal') &times;
                            // Modal body
                            .modal-body
                              .row
                                .col-md-12      
                                  each bizna, i in similarbiz
                                    if i>1         
                                      a.bizlink(href="/biz/"+bizna.slug) 
                                        p
                                          if bizna.photo
                                            img.coup-img.img-fluid(src="/uploads/thumbs/cover"+ bizna.photo, alt=bizna.name +' on FindIt Kenya')
                                          else
                                            img.coup-img.img-fluid(src="/img/noimageavailable.jpg", alt=bizna.name+ ' on FindIt Kenya')
                                          div
                                            h6.findit-red
                                              =bizna.name
                                            span
                                              .row
                                                each feature , i in bizna.features.sort()
                                                  if(i < 2)
                                                    .col-xs-6
                                                      | #{feature}    |   
                                              
                                            if(!isNaN(bizna.distance))  
                                              span.text-left
                                                small  
                                                  =(bizna.distance/1000).toFixed(1)
                                                  span     km away   
                                      br
                            // Modal footer
                            .modal-footer
                              button.btn.btn-danger(type='button' data-dismiss='modal') Close

      
      .row.flowerwhite
        .col-md-12
          if(products.length > 0)  
            .row
              .col-md-12
                .section.general-best-sellers
                  h4.text-center
                    strong
                      | Our Products
                      
            .row
              .owl-carousel.owl-theme
                each product, i in products
                  if(i<6)
                    .item.py-2(style="border:none")
                      a(href="/product/"+biz.slug+"/"+product.category.name+"/"+product.subcategory+"/"+product.minicategory+"/"+product.slug)
                        .card.h-100(style="border:none !important; box-shadow: 0 0 2px 0 rgba(46,62,72,.12), 0 2px 4px 0 rgba(46,62,72,.12);")
                            img.card-img-top.w-100.product-img-home(src='/uploads/product/thumbs/'+product.photo, alt=product.name +' on FindIt Kenya', style="width: 200px !important; height: 200px !important;")
                            .card-text
                              =product.name
                              if product.oldprice
                                .price-old.findit-blue.strike
                                  small Was  
                                    span KES #{product.oldprice}
                              if product.price
                                .price-new.findit-red
                                  small Now  
                                    span KES #{product.price}
            .row
            .col-md-12.text-center
              span#showproducts 
                strong.findit-blue
                  | See More Products
            .row.productsMenu(style="display: none;")
              each product, i in products
                if(i>5)
                  .item.py-2(style="border:none")
                    a(href="/product/"+biz.slug+"/"+product.category.name+"/"+product.subcategory+"/"+product.minicategory+"/"+product.slug)
                      .card.h-100(style="border:none !important; box-shadow: 0 0 2px 0 rgba(46,62,72,.12), 0 2px 4px 0 rgba(46,62,72,.12);")
                          img.card-img-top.w-100.product-img-home(src='/uploads/product/thumbs/'+product.photo, alt=product.name +' on FindIt Kenya', style="width: 200px !important; height: 200px !important;")
                          .card-text
                            =product.name
                            if product.oldprice
                              .price-old.findit-blue.strike
                                small Was  
                                  span KES #{product.oldprice}
                            if product.price
                              .price-new.findit-red
                                small Now  
                                  span KES #{product.price}
              .item.py-2#showlessproducts(style="border:none")
                .card.h-100(style="border:none !important; box-shadow: 0 0 2px 0 rgba(46,62,72,.12), 0 2px 4px 0 rgba(46,62,72,.12);")
                  .card-text.findit-blue(style="padding-top:50%") 
                    strong Show less Products
          else
            |              
          //.col-md-3
            if(branches)
              .row
                div.col-md-12.text-center
                  h4
                    strong.text-center
                      | Branches
                div.col-md-12       
                  each branch, i in branches 
                    if i<5         
                      a.bizlink(href="/biz/"+branch.slug) 
                        div.col-md-12.is-island
                          h6.findit-red
                            =branch.name
                          if(!isNaN(branch.distance))  
                            span 
                              =(branch.distance/1000).toFixed(1)
                              span     km away
      .row.flowerwhite 
        .col-md-9
          if biz.youtube
            .row(style="margin-bottom:2rem")
              .col-md-10.text-center
                h3.text-center
                  | Youtube
                p
                  //iframe(width='100%', height='315', src='https://'+biz.youtube, frameborder='0', allow='autoplay; encrypted-media', allowfullscreen='')
                  iframe(width='100%', height='315', src=biz.youtube, frameborder='1', allow='autoplay; encrypted-media', allowfullscreen='')
            
      .row.flowerwhite
        .col-md-12
          .row(style="margin-bottom:2rem")
            if biz.reviews.length>0    
              .col-md-12
                h3.text-center
                  | Reviews
                each review in biz.reviews              
                  .row               
                    .col-md-1.text-left 
                      span.fas.fa-comment-alt
                    .col-md-3
                      .col-md-12(class="rating medium star-icon value-"+review.rate+" label-hidden")
                        .star-container
                          .star
                            i.star-empty
                            i.star-half
                            i.star-filled
                          .star
                            i.star-empty
                            i.star-half
                            i.star-filled
                          .star
                            i.star-empty
                            i.star-half
                            i.star-filled
