extends layout

block content
  .row
    .col-md-8
      h2(style='color: #08b4df;')
        = coupon.name
      h3
        = coupon.bizid.name
    .col-md-4
      if(coupon.photo)
        img.img-responsive(src=host+"/uploads/thumbs/coupons/"+ coupon.photo,height="50%") 
  .row
    .col-md-12
      p
        =coupon.description
    .col-md-12
      each user, i in coupon.users
        -console.log(coupon.users) 
        if(user.user_id != null)
          if i<2
            h2(style="color:green")
              =user.code
            
