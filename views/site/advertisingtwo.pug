extends ../layout
block content
  .container-fluid(style="margin-top:10rem")
    form(method='post', action='/business/newpackage')
        .row
            .form-group
                section
                    .col-md-12.packages-padding.banner
                        input.form-control-form(name='package', type='radio', value='free', style='display:none', required)
                        label(for='banner')
                            .card.card-product
                                .row
                                    .col-md-12 
                                        h3
                                            strong
                                                |  Home Page Banner (KES: 500 per day)
                                        .card-img
                                        img(src='/images/bannerhomead.png' style='width:100%; height:200px')
                                        .card-text
                                            ul
                                                li
                                                    small -Social Media Marketing on find it Page
                                                li
                                                    small -Featured articles on findit blogs 
                                                li  
                                                    small -You can change the advert image 
                                
                                .form-group
                                    .row
                                        .col-md-12
                                            if(loggedin)
                                                span.col-md-12.phone
                                                    small.small-cart
                                                        | Phone: 
                                                        =user.phone
                                                span.col-md-12.email
                                                    small.small-cart
                                                        | Email: 
                                                        =user.email
                                .form-group    
                                    .row
                                        .col-sm-5
                                            input#gallery.form-control-form.imagegallery(type='file', name='gallery', placeholder='gallery', multiple='')
                                        .col-sm-7
                                            #gallerypreview
                                .form-group
                                    .row                        
                                        .col-md-12
                                            select.selectpicker.form-control#price(name='bizid',data-live-search="true")
                                                option(data-icon='glyphicon-wrench', value='') -- Select Duration --
                                                option(data-icon='glyphicon-gift', value='1-week')  1 week(Ksh. 3,500)
                                                option(data-icon='glyphicon-gift', value='2-weeks')  2 weeks(Ksh. 7,000)
                                                option(data-icon='glyphicon-gift', value='1-month')  1 month(Ksh. 12,000)
                                                option(data-icon='glyphicon-gift', value='1-year')  1 year(Ksh. 150,000)
                                .form-group    
                                    .row(style=" box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12); margin-top:5rem;")
                                        .form-group
                                            span.btn.btn-grey.btn-block.btn-lg.noLnk(style=' border: 1px solid;margin-bottom:10px;')
                                                small(style='text-transform: none;') Total KShs. 
                                                span#total
                                                    #{total} .
                                .form-group
                                    button.btn.btn-primary.form-control-form(type='submit')
                                        | Submit
                    .col-md-12.packages-padding.sidebar
                        input.form-control-form(name='package', type='radio', value='free', style='display:none', required)
                        label(for='banner')
                            .card.card-product
                                .row
                                    .col-md-12
                                        h3
                                            strong
                                                | Side bar Banner
                                                br
                                                span(style="text-decoration: line-through;")
                                                small Was (KES 300 /
                                                span
                                                small Now (KES 200 /  
                                                small Per Day)
                                        .card-img
                                            img(src='/images/sidebarad.png' style='width:100%; height:200px')
                                        .card-text
                                            ul
                                                li
                                                    small -Social Media Marketing on find it Page
                                                li
                                                    small -You can change the advert image                    
                        
                                .form-group
                                    .row
                                        .col-md-12
                                            if(loggedin)
                                                span.col-md-12.phone
                                                    small.small-cart
                                                        | Phone: 
                                                        =user.phone
                                                span.col-md-12.email
                                                    small.small-cart
                                                        | Email: 
                                                        =user.email
                                .form-group    
                                    .row
                                        .col-sm-5
                                            input#gallery.form-control-form.imagegallery(type='file', name='gallery', placeholder='gallery', multiple='')
                                        .col-sm-7
                                            #gallerypreview
                                .form-group
                                    .row
                                        .col-md-12
                                            select.selectpicker.form-control#price(name='bizid',data-live-search="true")
                                                option(data-icon='glyphicon-wrench', value='') -- Select Duration --
                                                option(data-icon='glyphicon-gift', value='1-week')  1 week(Ksh. 1000)
                                                option(data-icon='glyphicon-gift', value='2-weeks')  2 weeks(Ksh. 2,000)
                                                option(data-icon='glyphicon-gift', value='1-month')  1 month(Ksh. 5,000)
                                                option(data-icon='glyphicon-gift', value='1-year')  1 year(Ksh. 50,000)
                                .form-group    
                                    .row(style=" box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12); margin-top:5rem;")
                                        .form-group
                                            span.btn.btn-grey.btn-block.btn-lg.noLnk(style=' border: 1px solid;margin-bottom:10px;')
                                                small(style='text-transform: none;') Total KShs. 
                                                span#total
                                                    #{total} .
                                .form-group
                                    button.btn.btn-primary.form-control-form(type='submit')
                                        | Submit
    // script to show quick look on mouseover
    script(type='text/javascript').
        $(document).ready(function () {
          var type = '!{type}';
          if(type == 'sidebar'){
            $('.sidebar').show();
            $('.banner').hide();
            $('#price').change(function() {
              console.log($(this).find('option:selected').attr('value'));
              var total = $(this).find('option:selected').attr('value');
              if(total == '1-week'){
                $('#total').text('1000');
              }
              if(total == '2-weeks'){
                $('#total').text('2000');
              }
              if(total == '1-month'){
                $('#total').text('5000');
              }
              if(total == '1-year'){
                $('#total').text('50000');
              }
            });
          }else{
            $('.sidebar').hide();
            $('.banner').show();
            $('#price').change(function() {
              console.log($(this).find('option:selected').attr('value'));
              var total = $(this).find('option:selected').attr('value');              
              if(total == '1-week'){
                $('#total').text('3700');
              }
              if(total == '2-weeks'){
                $('#total').text('7000');
              }
              if(total == '1-month'){
                $('#total').text('12000');
              }
              if(total == '1-year'){
                $('#total').text('150000');
              }
            });
          }
        });
