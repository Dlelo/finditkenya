extends admin-layout

block content
  // /.row
  // ==============================================================
  // Different data widgets
  // ==============================================================
  // .row
  // ==============================================================
  // table
  // ==============================================================
  .row
    .col-md-12.col-lg-12.col-sm-12
      .white-box
        .col-md-3.col-sm-4.col-xs-6.pull-right
          select.form-control.pull-right.row.b-none
            option March 2017
            option April 2017
            option May 2017
            option June 2017
            option July 2017
        h3.box-title Categories
        .table-responsive
          table.table
            thead
              tr
                th #
                th NAME
                th APPROVED
                th ICON
                th ACTIONS
            tbody
              each category,i in categories
                tr
                  td
                    = i+1
                  td 
                    =category.name
                  td 
                    =category.approved
                  td 
                    =category.icon
                  td 
                    =category.order
                  td
                    each cat in category.subcategories
                      =cat.name 
                      a(href="/admin/subcategory/delete/"+category.id+"/"+cat.name, onclick="return confirm('Are you sure you want to delete this Category?')")
                        i.fa.fa-trash.fa-fw(aria-hidden='true')
                      a(href="/admin/subcategory/bizlist/"+cat.name,'title'="See Businesses Under This Category")
                        i.fa.fa-eye.fa-fw(aria-hidden='true')
                      br
                  td
                    =category.icon
                  td
                    span.text-info
                      a(href="/admin/category/delete/"+category.id, onclick="return confirm('Are you sure you want to delete this Category?')", title="Delete Category")
                        i.fa.fa-trash.fa-fw(aria-hidden='true')
                    span.text-info
                      a(href="/admin/category/edit/"+category.id, title="Edit Category")
                        i.fa.fa-pencil.fa-fw(aria-hidden='true')
                    span.text-info
                      a(href="/admin/category/showhome/"+category.id, title="Show on home page")
                        i.fa.fa-check.fa-fw(aria-hidden='true')
