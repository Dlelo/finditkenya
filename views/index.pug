extends layout
block content
 div.container-fluid
  div#home.banner
    div.row.justify-content-end.my-row    
      div.col-md-4.col-sm-8.col-xm-8.my-col.text-right
        div.banner-text-top
          nav.navbar.navbar-expand-sm.addbusiness.nav-bar-addbusiness.navbar-nav.ml-lg-auto.text-center
            ul.navbar-nav
              li.nav-item
                a.nav-link(href='/business/newpackage')
                  span.fas.fa-database.user-fav
                    |  Add Business
              li.nav-item
                a.nav-link(href='/add-agent')
                  span.fas.fa-user-tie.user-fav
                   |  Apply as an Agent
    div.row.my-row.justify-content-start
      div.col-md-8.col-sm-8.col-xm-8.my-col
        div.banner-text
          form(method='get', action='/search')
            div.input-group
              span.input-group-addon#basic-addon1.finditbutton.input-group-addon.text-center
               h5
                |  Find
              input.form-control.form-control-lg(type="text" class="form-control" placeholder="Restaurants, Events, Hotels, Holidays, Businesses, lawyers, Doctors..." aria-describedby="basic-addon1")
    
    
  //search by category
  //center
  //section.wthree-row.py-sm-5.py-3.w3-about
  div.container-fluid.container-margin
    
    //main categories and coupon row
    div.row.my-row.justify-content-center
      //categories
      div.col-8.my-col
        h2.agile-title.h-order-category.text-center
          | Search by Category

      
        div.row.my-md-5.mt-sm-8.my-4.text-center
          each category,i in categories
            if(i < 4)
              div.col-lg-3.col-md-3.w3-ab.my-md-0.my-sm-8.my-4
                //div.w3-ab-grid
                div.w3-aicon.py-lg-5.py-md-3.py-5
                    img.img-fluid.category-img-wrapper(src="/img/restaurant.jpg" alt="Responsive image")
                    h6.my-3
                     =category.name
                div.w3-ab-captn.p-md-3.py-4
                  i.fas.fa-bed
                  h4.my-lg-3.my-md-2.my-3
                    | Professional Services
                  p.px-3
                    | Aenean pulvinar ac enimet posuere tincidunt velit Utin tincidunt
              
        //div.agileabt-w3.py-lg-5
        div.row.my-md-5.mt-sm-8.my-4.text-center
          each category,i in categories
            if(i > 4 && i<8)
              div.col-lg-3.col-md-3.w3-ab.my-md-0.my-sm-8.my-4
                //div.w3-ab-grid
                div.w3-aicon.py-lg-5.py-md-3.py-5
                    img.img-fluid.category-img-wrapper(src="/img/travel.jpeg" alt="Responsive image")
                    h6.my-3
                      =category.name
                div.w3-ab-captn.p-md-3.py-4
                  i.fas.fa-bed
                  h4.my-lg-3.my-md-2.my-3
                    | Professional Services
                  p.px-3
                    | Aenean pulvinar ac enimet posuere tincidunt velit Utin tincidunt
              
          
          div.col-lg-3.col-md-3.w3-ab.my-md-0.my-sm-8.my-4
                //div.w3-ab-grid
                div.w3-aicon.py-lg-5.py-md-3.py-5
                    img.img-fluid.category-img-wrapper(src="/img/more_categories.png" alt="Responsive image")
                    button.btn.btn-light(onclick="openCategories()" type="button")
                      | More Categories ...
                            
                div.w3-ab-captn.p-md-3.py-4
                  i.fab.fa-slideshare
                  h4.my-lg-3.my-md-2.my-3
                    | traventure
                  p.px-3
                    | Aenean pulvinar ac enimet posuere tincidunt velit Utin tincidunt
        //more categories
        div.row.morecategories#morecategories(style="display:none")
          each category,i in categories
           if(i > 8)
            ul
              div.col-3.col-sm-5.col-xs-5.align-categories
                li 
                  a(href="/categories")
                   span.fas.fa-coffee
                      =category.name
              
      div.col-lg-4.col-md-4.col-sm-6.col-xs-6
        div
          h2.agile-title.h-order-category.text-center
            | Top deals
            //top deal
        each coupon,i in coupons
          row.deal-main
            div.col-6
              div
                 img.deal-img-wrapper.img-fluid(src="/uploads/thumbs/coupons/"+ coupon.photo, alt="Responsive image")
                 p
                  h5                   
                   = coupon.bizid.name
            div.col-6  
              p
               h5.my-3
                  =coupon.name
               p
                  =coupon.description
               div
                 p
                  strike
                     |Ksh. 660
                  |Ksh. 460 
               div.topdeals-bottom
                   button.btn.btn-outline-primary(type="button" )
                     =coupon.tagline
        
  //footer
  div.container-fluid
    .col-md-12.col-sm-12.text-center.footer-style
            .terms-policy.footer-text
              ul
                li
                  a.footer-text(href='/terms-and-conditions', target='_parent')
                    |  Terms and Conditions
                li
                  a.footer-text(href='/privacy-policy', target='_parent')
                    |  Privacy Policy
            p
