extends ../layout-min

block content
  #home.parallax-content-list.baner-content-listing-biz
    .container
      if validationerrors
        each error in validationerrors
          .alert.alert-danger.xxx-error
            = error.msg
      .xxx
        hr
        h2 
          | Fill in below to Complete signing up
        
        form(method="post", action="/facebook")
          .form-group
            input#email.form-control-form(type='email', placeholder='Email', name='email',value='')
          .form-group
            input#phone.form-control-form(type='text', placeholder='Phone', name='phone', value='')
          .form-group
            button.btn.btn-primary.w3ls-btn(type='submit') Sign Up
