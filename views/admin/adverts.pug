extends admin-layout

block content
  // /.row
  // ==============================================================
  // Different data widgets
  // ==============================================================
  // .row
  .row
    .col-md-12.col-lg-12.col-sm-12
      .white-box
        
        h3.box-title Adverts
        .table-responsive(style="width:100%")
          table.table
            thead
              tr
                th NO.
                th PHOTO
                th PAID
                th PRICE
                th AD TYPE
                th CREATED DATE
                th STATUS
                th START DATE
                th EXPIRY DATE
                th ACTIONS
                //th START
                //th EXPIRY
                //th ADDED ON
            tbody
              each ad,i in adverts
                tr
                  td #{i+1}
                  td
                    img(src="/uploads/thumbs/adverts/"+ad.photo style="width:100px; height:100px")
                  td 
                    if(ad.paid)
                       span(style="color:red") Paid
                  td.txt-oflo 
                    =ad.price  
                  td.txt-oflo 
                    =ad.type 
                  td.txt-oflo 
                    =ad.date
                  td.txt-info 
                    if(ad.approved == 'true')
                      span(style="color:#5cb85c")
                        | Approved
                    else
                      span(style="color:#c00000")
                        | Waiting approval
                  td.txt-info 
                    =ad.confirmation
                  td.txt-oflo 
                    =ad.date
                  td.txt-oflo 
                    =ad.date
                  td
                    //span.text-info
                      a(href="/admin/adverts/confirm/"+ad.id, onclick="return confirm('Are you sure you want to Confirm this ad?')", title="Confirm Ad")
                        i.fa.fa-check.fa-fw(aria-hidden='true')
                    span.text-info
                      a(href="/admin/adverts/approve/"+ad.id, onclick="return confirm('Are you sure you want to Approve ad?')", title="Approve Ad")
                        i.fa.fa-check-square-o(aria-hidden='true')
                    span.text-info
                      a(href="/admin/adverts/edit/"+ad.id, title="Edit Ad")
                        i.fa.fa-pencil(aria-hidden='true')    
                    span.text-info
                      a(href="/admin/advert/delete/"+ad.id, onclick="return confirm('Are you sure you want to Delete this ad?')", title="Delete")
                        i.fa.fa-trash.fa-fw(aria-hidden='true')
                  
              
